<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.username">${DB_USERNAME}</property>
		<property name="hibernate.connection.password">${DB_PW}</property>
		<property name="hibernate.connection.url">${DB_URL}</property>
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<!-- this is very noisy in the console -->
		<property name = "hibernate.show_sql">true</property>
		<!-- creates database if "create", keeps existing structure and value if "update" or not -->
		<property name="hibernate.hbm2ddl.auto">create</property>
		<!-- map domain object classes -->
		<mapping class = "com.revature.domain.User"/>
	</session-factory>
</hibernate-configuration>